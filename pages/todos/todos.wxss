.container {
  display: flex;
  flex-direction: column;
	border-top: 1rpx solid #e0e0e0;
  
}

.search {
	display: flex;
  flex-direction: row;
	align-items: center; 
	margin: 20rpx;
	padding: 20rpx;
	border: 1rpx solid #E0E0E0;
	border-radius: 5rpx;
	box-shadow: 0 0 5rpx #E0E0E0;
  
}

.search image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}

.todos {
	margin: 20rpx;
	border: 1rpx solid #E0E0E0;
	border-radius: 5rpx;
	box-shadow: 0 0 5rpx #E0E0E0;
}
.todos .item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	border-bottom: 1rpx solid #E0E0E0;
}

.todos .item:last-child {
	border-bottom: 0;
}

.todos .item text {
	flex: 1;
	margin-left: 20rpx;
	font-size: 30rpx;
	color: #444;
}
.todos .item.completed text {
	color: #888;
	text-decoration: line-through;
	
}

.footer {
	display: flex;
	justify-content: space-between;
	margin: 20rpx;
	font-size: 30rpx;
}